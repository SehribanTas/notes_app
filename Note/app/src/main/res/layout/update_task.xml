<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/noteupdate"
        android:layout_width="348dp"
        android:layout_height="274dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="44dp"
        android:background="@color/cardview_shadow_end_color"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Not "
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="200dp"
        android:layout_height="99dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="115dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/noteupdate">


        <EditText
            android:id="@+id/time"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="234dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_shadow_end_color"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="saat"
            android:inputType="time"
            app:layout_constraintBottom_toTopOf="@+id/date"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/date"
            android:layout_width="106dp"
            android:layout_height="41dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:background="@color/cardview_shadow_end_color"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="tarih"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/update_save"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/saat"
        app:tint="@color/yellow" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="192dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/takvim"
        app:tint="@color/yellow" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/update_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="@color/yellow"
        android:clickable="true"
        android:gravity="end"
        android:scaleType="center"
        android:text="GÃ¼ncelle"
        app:backgroundTint="@color/yellow"
        app:fabSize="auto"
        app:icon="@drawable/guncelle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>